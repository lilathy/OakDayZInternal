<UserControl x:Class="OakPanel.Views.VisualsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OakPanel.Views"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
                 
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Visuals" FontSize="24" FontWeight="SemiBold" 
                      Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
            <TextBlock Text="Configure ESP and visual overlays" FontSize="13" 
                      Foreground="{StaticResource TextDimBrush}"/>
        </StackPanel>
        
                       
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
                          
            <StackPanel Grid.Column="0">
                                         
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Enable ESP" FontSize="16" FontWeight="SemiBold" 
                                          Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                                <TextBlock Text="Master toggle for all visual features" FontSize="12" 
                                          Foreground="{StaticResource TextDimBrush}"/>
                            </StackPanel>
                            <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}"
                                         IsChecked="{Binding EspEnabled, Mode=TwoWay}"
                                         VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                                      
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ESP CATEGORIES" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <ItemsControl ItemsSource="{Binding EspToggles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Label}" 
                                                      Foreground="{StaticResource TextBrush}" 
                                                      FontSize="14" Margin="0,0,0,2"/>
                                            <TextBlock Text="{Binding Description}" 
                                                      Foreground="{StaticResource TextDimBrush}" 
                                                      FontSize="12"/>
                                        </StackPanel>
                                        <ToggleButton Grid.Column="1" 
                                                    Style="{StaticResource ToggleSwitchStyle}"
                                                    IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                    VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                                       
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="PLAYER ESP" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <ItemsControl ItemsSource="{Binding PlayerSettings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Resources>
                                            <DataTemplate DataType="{x:Type local:ToggleSetting}">
                                                <Grid Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Label}" 
                                                              Foreground="{StaticResource TextBrush}" 
                                                              FontSize="14" VerticalAlignment="Center"/>
                                                    <ToggleButton Grid.Column="1" 
                                                                Style="{StaticResource ToggleSwitchStyle}"
                                                                IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                                                </Grid>
                                            </DataTemplate>
                                            <DataTemplate DataType="{x:Type local:DistanceSetting}">
                                                <StackPanel Margin="0,0,0,16">
                                                    <Grid Margin="0,0,0,8">
                                                        <TextBlock Text="{Binding Label}" 
                                                                  Foreground="{StaticResource TextBrush}" 
                                                                  FontSize="14"/>
                                                        <TextBlock Text="{Binding Value, StringFormat={}{0}m}" 
                                                                  Foreground="{StaticResource AccentBrush}" 
                                                                  FontSize="14" FontWeight="Medium"
                                                                  HorizontalAlignment="Right"/>
                                                    </Grid>
                                                    <Slider Style="{StaticResource ModernSliderStyle}"
                                                           Minimum="{Binding Min}" 
                                                           Maximum="{Binding Max}" 
                                                           Value="{Binding Value, Mode=TwoWay}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                            <DataTemplate DataType="{x:Type local:ColorSetting}">
                                                <Grid Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Label}" 
                                                              Foreground="{StaticResource TextBrush}" 
                                                              FontSize="14" VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                        <Button Style="{StaticResource ColorSwatchButtonStyle}"
                                                                Padding="0" Background="Transparent" Cursor="Hand"
                                                                Margin="0,0,8,0">
                                                            <Border Background="{Binding ColorBrush}"
                                                                    Width="32" Height="32"
                                                                    CornerRadius="6"
                                                                    BorderBrush="{StaticResource BorderBrush}"
                                                                    BorderThickness="1"/>
                                                        </Button>
                                                        <TextBox Text="{Binding HexString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                Style="{StaticResource ColorHexTextBoxStyle}"
                                                                FontFamily="Consolas"
                                                                VerticalAlignment="Center"
                                                                IsReadOnly="False"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ContentControl.Resources>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                                       
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ZOMBIE ESP" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <ItemsControl ItemsSource="{Binding ZombieSettings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Resources>
                                            <DataTemplate DataType="{x:Type local:ToggleSetting}">
                                                <Grid Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
