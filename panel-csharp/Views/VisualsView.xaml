                                                        </Button>
                                                        <TextBox Text="{Binding HexString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                Style="{StaticResource ColorHexTextBoxStyle}"
                                                                FontFamily="Consolas"
                                                                VerticalAlignment="Center"
                                                                IsReadOnly="False"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ContentControl.Resources>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                                     
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ITEM ESP" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <ItemsControl ItemsSource="{Binding ItemSettings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Resources>
                                            <DataTemplate DataType="{x:Type local:ToggleSetting}">
                                                <Grid Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Label}" 
                                                              Foreground="{StaticResource TextBrush}" 
                                                              FontSize="14" VerticalAlignment="Center"/>
                                                    <ToggleButton Grid.Column="1" 
                                                                Style="{StaticResource ToggleSwitchStyle}"
                                                                IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                                                </Grid>
                                            </DataTemplate>
                                            <DataTemplate DataType="{x:Type local:DistanceSetting}">
                                                <StackPanel Margin="0,0,0,16">
                                                    <Grid Margin="0,0,0,8">
                                                        <TextBlock Text="{Binding Label}" 
                                                                  Foreground="{StaticResource TextBrush}" 
                                                                  FontSize="14"/>
                                                        <TextBlock Text="{Binding Value, StringFormat={}{0}m}" 
                                                                  Foreground="{StaticResource AccentBrush}" 
                                                                  FontSize="14" FontWeight="Medium"
                                                                  HorizontalAlignment="Right"/>
                                                    </Grid>
                                                    <Slider Style="{StaticResource ModernSliderStyle}"
                                                           Minimum="{Binding Min}" 
                                                           Maximum="{Binding Max}" 
                                                           Value="{Binding Value, Mode=TwoWay}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                            <DataTemplate DataType="{x:Type local:ColorSetting}">
                                                <Grid Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Label}" 
                                                              Foreground="{StaticResource TextBrush}" 
                                                              FontSize="14" VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                        <Button Style="{StaticResource ColorSwatchButtonStyle}"
                                                                Padding="0" Background="Transparent" Cursor="Hand"
                                                                Margin="0,0,8,0">
                                                            <Border Background="{Binding ColorBrush}"
                                                                    Width="32" Height="32"
                                                                    CornerRadius="6"
                                                                    BorderBrush="{StaticResource BorderBrush}"
                                                                    BorderThickness="1"/>
                                                        </Button>
                                                        <TextBox Text="{Binding HexString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                Style="{StaticResource ColorHexTextBoxStyle}"
                                                                FontFamily="Consolas"
                                                                VerticalAlignment="Center"
                                                                IsReadOnly="False"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ContentControl.Resources>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                                        
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="VEHICLE ESP" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <ItemsControl ItemsSource="{Binding VehicleSettings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Resources>
                                            <DataTemplate DataType="{x:Type local:ToggleSetting}">
                                                <Grid Margin="0,0,0,12">
