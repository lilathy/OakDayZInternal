<UserControl x:Class="OakPanel.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
                 
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Settings" FontSize="24" FontWeight="SemiBold" 
                      Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
            <TextBlock Text="Application configuration and preferences" FontSize="13" 
                      Foreground="{StaticResource TextDimBrush}"/>
        </StackPanel>
        
                  
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
                          
            <StackPanel Grid.Column="0">
                           
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="KEYBINDS" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Menu Toggle Key" FontSize="14" 
                                          Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                                <TextBlock Text="Key to open/close the in-game menu" FontSize="12" 
                                          Foreground="{StaticResource TextDimBrush}"/>
                            </StackPanel>
                            <Button Grid.Column="1" 
                                   Style="{StaticResource HotkeyButtonStyle}"
                                   Content="{Binding MenuKeyDisplay}"
                                   Click="MenuKey_Click"
                                   x:Name="MenuKeyButton"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                          
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="PRIVACY" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Stream Proof" FontSize="14" 
                                          Foreground="{StaticResource TextBrush}" Margin="0,0,0,2"/>
                                <TextBlock Text="Hide overlays from screen capture" FontSize="12" 
                                          Foreground="{StaticResource TextDimBrush}"/>
                            </StackPanel>
                            <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}"
                                         IsChecked="{Binding StreamProof, Mode=TwoWay}"
                                         VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                          
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ACTIONS" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <Button Style="{StaticResource SecondaryButtonStyle}"
                               Content="Reset to Defaults"
                               Click="ResetDefaults_Click"
                               HorizontalAlignment="Stretch"
                               Margin="0,0,0,8"/>
                        
                        <TextBlock Text="This will reset all settings to their default values" 
                                  FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
                           
            <StackPanel Grid.Column="2">
                                  
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="PLAYER POSITION" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                                           
                            <Border Grid.Column="0" Background="{StaticResource InputBrush}" 
                                   CornerRadius="8" Padding="12" Margin="0,0,8,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="X" FontSize="12" FontWeight="SemiBold"
                                              Foreground="{StaticResource AccentBrush}"
                                              HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="CoordXText" Text="{Binding CoordX}" 
                                              FontSize="16" FontFamily="Consolas"
                                              Foreground="{StaticResource TextBrush}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                                           
                            <Border Grid.Column="1" Background="{StaticResource InputBrush}" 
                                   CornerRadius="8" Padding="12" Margin="4,0,4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Y" FontSize="12" FontWeight="SemiBold"
                                              Foreground="{StaticResource SuccessBrush}"
                                              HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="CoordYText" Text="{Binding CoordY}" 
                                              FontSize="16" FontFamily="Consolas"
                                              Foreground="{StaticResource TextBrush}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                                           
                            <Border Grid.Column="2" Background="{StaticResource InputBrush}" 
                                   CornerRadius="8" Padding="12" Margin="8,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Z" FontSize="12" FontWeight="SemiBold"
                                              Foreground="{StaticResource WarningBrush}"
                                              HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="CoordZText" Text="{Binding CoordZ}" 
                                              FontSize="16" FontFamily="Consolas"
                                              Foreground="{StaticResource TextBrush}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <Button Style="{StaticResource SecondaryButtonStyle}"
                               Content="Copy Coordinates"
                               Click="CopyCoords_Click"
                               HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
                
                                    
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="CONNECTION STATUS" FontSize="11" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="DLL Status" FontSize="14" 
                                      Foreground="{StaticResource TextBrush}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Ellipse x:Name="DllStatusDot" Width="8" Height="8" Margin="0,0,8,0"/>
                                <TextBlock x:Name="DllStatusText" Text="{Binding DllStatusDisplay}" 
                                          FontSize="14" Foreground="{StaticResource TextDimBrush}"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Target Process" FontSize="14" 
                                      Foreground="{StaticResource TextBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
